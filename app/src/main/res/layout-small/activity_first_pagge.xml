<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".page.FirstPagge">


    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="17dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silent" />
        <ImageView
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:layout_marginStart="10dp"
            android:textSize="17dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moon" />
    </LinearLayout>


    <ImageView
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/group1"
        android:id="@+id/imageView"
        android:layout_width="332.22dp"
        android:layout_height="242.69dp" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We are what we do" />

    <TextView
        android:textColor="#A1A4B2"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Thousand of people are usign silent moon
\nfor smalls meditation " />

    <com.google.android.material.button.MaterialButton
        android:layout_width="374dp"
        android:id="@+id/singup"
        android:layout_marginTop="95dp"
        android:text="SIGN UP"
        app:cornerRadius="12dp"
        android:textSize="14dp"
        android:backgroundTint="#8E97FD"
        android:textColor="#F6F1FB"
        android:layout_gravity="center_horizontal"
        android:layout_height="63dp">

    </com.google.android.material.button.MaterialButton>

    <TextView
        android:textColor="#A1A4B2"
        android:layout_marginTop="9dp"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="ALREADY HAVE AN ACCOUNT? LOG IN" />
</LinearLayout>