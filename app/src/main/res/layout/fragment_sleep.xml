<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/click_visible"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#03174D"
    tools:context=".Fragments.Sleep">

    <!-- TODO: Update blank fragment layout -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/show_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/union">
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/union1">

            </ImageView>
            <TextView
                android:textSize="28dp"
                android:textColor="#E6E7F2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="Sleep Stories">

            </TextView>
            <TextView
                android:text="Soothing bedtime stories to help you fall\n
into a deep and natural sleep"
                android:gravity="center_horizontal"
                android:layout_marginTop="89dp"
                android:id="@+id/textsecond"
                android:textColor="#EBEAEC"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <HorizontalScrollView
                android:id="@+id/scroll"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/textsecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="70dp"
                            android:layout_height="63dp"
                            app:icon="@drawable/rect"
                            app:iconGravity="textStart"
                            android:textColor="@android:color/white"
                            app:iconTint="@android:color/white"
                            app:iconSize="24dp"
                            app:cornerRadius="20dp"
                            android:backgroundTint="#8E97FD"
                            android:paddingEnd="15dp">

                        </com.google.android.material.button.MaterialButton>
                        <TextView
                            android:text="All"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#E6E7F2"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="70dp"
                            android:layout_height="63dp"
                            app:icon="@drawable/rect"
                            app:iconGravity="textStart"
                            android:textColor="@android:color/white"
                            app:iconTint="@android:color/white"
                            app:iconSize="24dp"
                            app:cornerRadius="20dp"
                            android:backgroundTint="#8E97FD"
                            android:paddingEnd="15dp">

                        </com.google.android.material.button.MaterialButton>
                        <TextView
                            android:text="All"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#E6E7F2"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="70dp"
                            android:id="@+id/all"
                            android:layout_height="63dp"
                            app:icon="@drawable/sleep1"
                            app:iconGravity="textStart"
                            android:textColor="@android:color/white"
                            app:iconTint="@android:color/white"
                            app:iconSize="24dp"
                            app:cornerRadius="20dp"
                            android:backgroundTint="#8E97FD"
                            android:paddingEnd="15dp">

                        </com.google.android.material.button.MaterialButton>
                        <TextView
                            android:text="Sleep"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#E6E7F2"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="70dp"
                            android:layout_height="63dp"
                            app:icon="@drawable/rect"
                            app:iconGravity="textStart"
                            android:textColor="@android:color/white"
                            app:iconTint="@android:color/white"
                            app:iconSize="24dp"
                            app:cornerRadius="20dp"
                            android:backgroundTint="#8E97FD"
                            android:paddingEnd="15dp">

                        </com.google.android.material.button.MaterialButton>
                        <TextView
                            android:text="All"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#E6E7F2"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="70dp"
                            android:layout_height="63dp"
                            app:icon="@drawable/rect"
                            app:iconGravity="textStart"
                            android:textColor="@android:color/white"
                            app:iconTint="@android:color/white"
                            app:iconSize="24dp"
                            app:cornerRadius="20dp"
                            android:backgroundTint="#8E97FD"
                            android:paddingEnd="15dp">

                        </com.google.android.material.button.MaterialButton>
                        <TextView
                            android:text="All"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#E6E7F2"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout> <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="70dp"
                        android:layout_height="63dp"
                        app:icon="@drawable/rect"
                        app:iconGravity="textStart"
                        android:textColor="@android:color/white"
                        app:iconTint="@android:color/white"
                        app:iconSize="24dp"
                        app:cornerRadius="20dp"
                        android:backgroundTint="#8E97FD"
                        android:paddingEnd="15dp">

                    </com.google.android.material.button.MaterialButton>
                    <TextView
                        android:text="All"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#E6E7F2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_below="@+id/scroll"
                android:layout_marginTop="30dp"
                android:id="@+id/imageview"
                android:src="@drawable/the"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview"
                android:layout_marginTop="40dp">

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>





</FrameLayout>