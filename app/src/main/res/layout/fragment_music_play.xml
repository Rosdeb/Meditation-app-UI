<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/back_fragment21"
    android:background="#03174C"
    android:layout_height="match_parent"
    tools:context=".Fragments.Music_play">

    <!-- TODO: Update blank fragment layout -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_margin="22dp"
                app:cardCornerRadius="25dp"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageButton
                    android:clickable="true"
                    android:id="@+id/back_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_fragment"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:civ_border_color="#EBEAEC"
                    app:civ_border_width="2dp" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/sleepmusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="124dp"
                android:layout_marginTop="30dp"
                android:text="Sleep Music"
                android:textColor="#E6E7F2"
                android:textSize="24dp"
                android:textStyle="bold">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="120dp">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</FrameLayout>