<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#8E97FD"
    android:layout_height="match_parent"
    tools:context=".page.WelcomePage">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silent" />
        <ImageView
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp"
            android:textSize="17dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moon" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:textColor="#FFECCC"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi Rosdeb, Welcome" />

    <TextView
        android:textColor="#CFCACA"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to Silent Moon" />

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#CFCACA"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore the app, Find some peace of mind to\n prepare for meditation." />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/ellipse4">

        </ImageView>


        <ImageView
            android:layout_width="307dp"
            android:layout_height="335dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="75dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ellipse4">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="284dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="86dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ellipse3">

        </ImageView>

        <ImageView
            android:layout_width="218dp"
            android:layout_height="260dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="98dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ellipse4">

        </ImageView>

        <ImageView
            android:layout_width="31dp"
            android:layout_height="11dp"
            android:layout_marginTop="90dp"
            android:background="@android:color/transparent"
            android:src="@drawable/vector">

        </ImageView>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="78dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="90dp"
            android:background="@android:color/transparent"
            android:src="@drawable/vector">

        </ImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="80dp"
            android:background="@android:color/transparent"
            android:src="@drawable/birth">

        </ImageView>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="180dp"
            android:background="@android:color/transparent"
            android:src="@drawable/birth">

        </ImageView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="29dp"
            android:layout_marginTop="120dp"
            android:background="@android:color/transparent"
            android:src="@drawable/vector">

        </ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="127dp"
            android:layout_height="125dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="164dp"
            android:src="@drawable/man"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getstarted"
            android:layout_width="300dp"
            android:layout_height="63dp"
            android:layout_marginLeft="31dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="340dp"
            android:backgroundTint="#EBEAEC"
            android:text="GET STARTED"
            android:gravity="center"
            android:textColor="#3F414E"
            android:textSize="14dp"
            app:cornerRadius="17dp" />

    </RelativeLayout>


</LinearLayout>